# Environment Configuration
ENVIRONMENT=development

# API Configuration
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/prime_interviews

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Clerk Authentication
CLERK_SECRET_KEY=your-clerk-secret-key
CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key

# Z.ai API Configuration (for AI interviews)
ZAI_API_URL=https://api.z.ai/v1
ZAI_API_KEY=your-zai-api-key

# SMTP Email Configuration (Brevo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Prime Interviews
SMTP_SECURE=false

# Brevo API (for transactional emails)
BREVO_API_KEY=your-brevo-api-key

# 100ms Video SDK (optional, for future video recording)
HMS_APP_ID=your-100ms-app-id
HMS_APP_SECRET=your-100ms-app-secret

# File Storage (for resumes)
STORAGE_TYPE=local  # local, s3, gcs
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=prime-interviews-uploads
AWS_REGION=us-east-1

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Stripe (for B2B billing - coming soon)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret